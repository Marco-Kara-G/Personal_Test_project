generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}



model Game {
  id           String       @id @default(uuid())
  title        String       @unique
  description  String
  release_date DateTime
  developer    Developer    @relation(fields: [dev_id], references: [id])
  dev_id       String
  publisher    Publisher    @relation(fields: [pub_id], references: [id])
  pub_id       String
  genre        Game_genre[]
  created_at   DateTime     @default(now())
  update_at    DateTime     @updatedAt
}

model Developer {
  id      String   @id @default(uuid())
  name    String   @unique
  region  String
  founded DateTime
  games   Game[]
}

model Publisher {
  id     String @id @default(uuid())
  name   String @unique
  region String
  games  Game[]
}

model Game_genre {
  id      String @id @default(uuid())
  genre   String
  game    Game   @relation(fields: [game_id], references: [id])
  game_id String
}



